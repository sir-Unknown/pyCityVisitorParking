{
  "name": "pyCityVisitorParking",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "python -m pip install -U pip && pip install -e '.[dev]' && pre-commit install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "editorconfig.editorconfig",
        "github.vscode-github-actions",
        "openai.chatgpt"
      ]
    }
  },
  "remoteUser": "vscode"
}
