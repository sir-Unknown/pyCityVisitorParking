{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["id", "name", "capabilities"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "capabilities": {
      "type": "object",
      "required": ["favorite_update_fields", "reservation_update_fields"],
      "properties": {
        "favorite_update_fields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["license_plate", "name"]
          },
          "uniqueItems": true
        },
        "reservation_update_fields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["start_time", "end_time", "name"]
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
